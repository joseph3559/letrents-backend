# Development Environment Variables Template
# Copy this to .env in your development directory

NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database Configuration (Development)
DATABASE_URL=postgresql://letrents_user:CHANGE_THIS_PASSWORD@localhost:5432/letrents_dev?schema=public

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_HOURS=168

# Application URLs (Development)
APP_URL=http://159.198.70.44:3000
API_URL=http://159.198.70.44:8080

# ImageKit Configuration (Use test/development keys)
IMAGEKIT_PRIVATE_KEY=your-dev-imagekit-private-key
IMAGEKIT_PUBLIC_KEY=your-dev-imagekit-public-key
IMAGEKIT_ENDPOINT_URL=https://ik.imagekit.io/your-id

# Email Configuration (Use test/development keys)
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your-dev-brevo-api-key
SENDGRID_API_KEY=your-dev-sendgrid-api-key
EMAIL_FROM_ADDRESS=dev@letrents.com
EMAIL_FROM_NAME=LetRents Dev

# Security Settings
REQUIRE_EMAIL_VERIFICATION=false

# Paystack - Subscription Payments (Use test keys)
PAYSTACK_SECRET_KEY=sk_test_your-test-key
PAYSTACK_PUBLIC_KEY=pk_test_your-test-key

# Paystack - Rent Payments (Use test keys)
RENT_PAYSTACK_SECRET_KEY=sk_test_your-test-key
RENT_PAYSTACK_PUBLIC_KEY=pk_test_your-test-key

