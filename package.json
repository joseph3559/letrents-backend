{
  "name": "letrents-backend-v2",
  "version": "2.0.0",
  "description": "LetRents Property Management System - Node.js Backend (migrated from Go with full feature parity)",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,tsx --exec 'npx tsc && node dist/src/index.js'",
    "build": "tsc -p tsconfig.json && npm run prisma:generate",
    "start": "npm run prisma:push && node dist/src/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "property-management",
    "real-estate",
    "nodejs",
    "typescript",
    "express",
    "prisma",
    "postgresql",
    "jwt",
    "rbac",
    "multi-tenant"
  ],
  "author": "LetRents Development Team",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@prisma/client": "^6.16.2",
    "@types/bcrypt": "^6.0.0",
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "imagekit": "^6.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "sib-api-v3-sdk": "^8.5.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  }
}
