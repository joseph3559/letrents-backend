# Production Environment Variables Template
# Copy this to .env in your production directory

NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Database Configuration (Production)
DATABASE_URL=postgresql://letrents_user:CHANGE_THIS_PASSWORD@localhost:5432/letrents_prod?schema=public

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_HOURS=168

# Application URLs (Production)
APP_URL=https://letrents.com
API_URL=https://api.letrents.com

# CORS Configuration (Allowed Origins - comma separated)
ALLOWED_ORIGINS=https://letrents.com,https://www.letrents.com

# ImageKit Configuration
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_ENDPOINT_URL=https://ik.imagekit.io/your-id

# Email Configuration
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your-brevo-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@letrents.com
EMAIL_FROM_NAME=LetRents

# Security Settings
REQUIRE_EMAIL_VERIFICATION=true

# Paystack - Subscription Payments (SaaS billing) - LIVE PRODUCTION
# Get these from: https://dashboard.paystack.com/#/settings/developer
# Make sure to use LIVE keys (not test keys) for production
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key_here

# Paystack - Rent Payments (Tenant rent collection)
# These can be the same as subscription keys or separate account
RENT_PAYSTACK_SECRET_KEY=sk_live_your_rent_secret_key_here
RENT_PAYSTACK_PUBLIC_KEY=pk_live_your_rent_public_key_here

# Paystack Mode (set to 'live' for production)
PAYSTACK_MODE=live

# Firebase Configuration (for push notifications)
# Option 1 (Recommended): Use GOOGLE_APPLICATION_CREDENTIALS
# Set this to the absolute path of your Firebase service account JSON file on the server
# GOOGLE_APPLICATION_CREDENTIALS="/var/secrets/firebase-service-account.json"

# Option 2 (Best for Docker/Cloud): Use FIREBASE_SERVICE_ACCOUNT_KEY
# Set this to the JSON content of your Firebase service account (can be base64 encoded)
# This is the most secure option for containerized deployments
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"letrents",...}'
# Or base64 encoded: FIREBASE_SERVICE_ACCOUNT_KEY="eyJ0eXBlIjoic2VydmljZV9hY2NvdW50IiwicHJvamVjdF9pZCI6Ii4uLiJ9"

# Supabase Configuration (for real-time messaging)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

