# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/letrents"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION_HOURS=24

# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=development

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM_ADDRESS="noreply@letrents.com"
EMAIL_FROM_NAME="LetRents"

# ImageKit Configuration (for file uploads)
IMAGEKIT_PUBLIC_KEY="your-imagekit-public-key"
IMAGEKIT_PRIVATE_KEY="your-imagekit-private-key"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your-id"

# Application URLs
APP_URL="http://localhost:3000"
API_URL="http://localhost:8080"

# Supabase Configuration (for real-time messaging)
# Get these from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings â†’ API
# 4. Copy the Project URL, anon/public key, and service_role key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Firebase Configuration (for push notifications)
# Option 1 (Recommended for Production): Use GOOGLE_APPLICATION_CREDENTIALS
# Set this to the absolute path of your Firebase service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/firebase-service-account.json"

# Option 2 (Best for CI/CD/Cloud): Use FIREBASE_SERVICE_ACCOUNT_KEY
# Set this to the JSON content of your Firebase service account (can be base64 encoded)
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'
# Or base64 encoded: FIREBASE_SERVICE_ACCOUNT_KEY="eyJ0eXBlIjoic2VydmljZV9hY2NvdW50IiwicHJvamVjdF9pZCI6Ii4uLiJ9"

# Option 3 (Alternative): Use FIREBASE_SERVICE_ACCOUNT_PATH
# Set this to a relative or absolute path to your Firebase service account JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH="./firebase-service-account.json"

# Note: For local development, you can also place the JSON file in the backend directory
# and it will be automatically detected. The file should be named:
# letrents-firebase-adminsdk-*.json

